<%include ../partials/header%>


          



<!-- //make everything in bootstrap container -->

<div class="container">  <!--this will add some spaces at left and right -->

    <header class="jumbotron">  <!--adding jumbotron -->
        <div class="container">  <!--Add spaces in jumbotron around content-->
            <h1>This is the campground page</h1>
            <p>View or handpicked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary" href="/campground/new">Add New campground</a>  <!--using primary button class from bootstrap-->
            </p>
        </div>
        

    </header>


    <!-- //using gride layout  -->
    
    <div class="row text-center d-flex flex-wrap">
        <% campgrounds.forEach((campground)=>{%>
        <div class="col-lg-3 col-md-6" style="padding-bottom: 15px">
            <div class="card" >
                <img class="card-img-top" src="<%= campground.image %>">
                <div class="card-body">
                        <h4 class="card-title"><%= campground.name %></h4>
                        <p class="card-text ">Some example text.</p>
                        <p>
                            <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">View More</a> <!--campground._id is an autogenerated id by mongo-->
                        </p>
                        
                </div>
            </div>
            
        </div>
        <%})%>
    </div>

</div>
<%include ../partials/footer%>

