<%include ../partials/header%>

<h1 style="text-align: center"> Edit <%=campground.name%></h1>
    <div style="width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: 0 auto">
 <form  action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
    <input class="form-control mb-2" type="text" name="campground[name]" value="<%=campground.name%>">
    <input class="form-control mb-2" type="text" name="campground[image]" value="<%=campground.image%>">
    <input class="form-control mb-4" type="text" name="campground[description]" value="<%=campground.description%>">
    <button  class="btn btn-lg btn-primary btn-block">Submit</button>

    <a  href="/campgrounds">Go back</a>

</form>
</div>
<% include ../partials/footer %>
